<Window x:Class="MiniProjectGui.WaiterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MiniProjectGui"
        mc:Ignorable="d"
        Title="WaiterWindow" Height="300" Width="300">
    <Grid>
       
        <Button Content="Select Waiter" Name="selectbutton" Background="Beige" HorizontalAlignment="Left" Margin="10,29,0,0" VerticalAlignment="Top" Width="96" RenderTransformOrigin="0.238,-0.462" Height="29" FontWeight="Bold" Click="selectbutton_Click"/>
        <Button Content="Add Waiter" Name="addbutton" Background="Beige" HorizontalAlignment="Left" Margin="10,87,0,0" VerticalAlignment="Top" Width="96" Height="27" FontWeight="Bold" Click="addbutton_Click"/>
        <Button Content="Delete Waiter" Name="deletebutton" Background="Beige" HorizontalAlignment="Left" Margin="10,148,0,0" VerticalAlignment="Top" Width="96" Height="29" FontWeight="Bold" Click="deletebutton_Click"/>
        <Button Content="Update Waiter" Name="updatebutton" Background="Beige" HorizontalAlignment="Left" Margin="10,207,0,0" VerticalAlignment="Top" Width="96" Height="26" FontWeight="Bold" Click="updatebutton_Click"/>
    </Grid>
</Window>
