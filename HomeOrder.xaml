<Window x:Class="MiniProjectGui.HomeOrder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MiniProjectGui"
        mc:Ignorable="d"
        Title="HomeOrder" Height="300" Width="500">
    <Grid Margin="0,0,-8,4">
        <Grid.RowDefinitions>
            <RowDefinition Height="62*"/>
            <RowDefinition Height="207*"/>
            <RowDefinition Height="0*"/>

        </Grid.RowDefinitions>
        <DataGrid x:Name="showTableGrid" 
                  Grid.Row =" 1" Background="Beige" HorizontalAlignment="Left" Width="494"/>
        <Label Content="All Home Orders" Grid.Row="0" Background="Beige" FontSize="24" FontFamily="Segoe WP Black" Margin="0,0,6,0"/>


    </Grid>
</Window>

