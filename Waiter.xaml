<Window x:Class="MiniProjectGui.Waiter"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MiniProjectGui"
        mc:Ignorable="d"
        Title="Waiter" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="62*"/>
            <RowDefinition Height="207*"/>
            <RowDefinition Height="0*"/>

        </Grid.RowDefinitions>
        <DataGrid x:Name="showTableGrid" 
                  Grid.Row =" 1" Background="Beige"/>
        <Label Content="All Waiters" Grid.Row="0" Background="Beige" FontSize="24" FontFamily="Yu Gothic UI Semibold" FontWeight="Bold"/>

    </Grid>
</Window>
